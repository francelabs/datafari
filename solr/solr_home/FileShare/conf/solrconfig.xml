					<str name="hl.tag.post"><![CDATA[</b>]]></str>
				</lst>
			</fragmentsBuilder>

			<boundaryScanner class="solr.highlight.SimpleBoundaryScanner" default="true" name="default">
				<lst name="defaults">
					<str name="hl.bs.maxScan">10</str>
